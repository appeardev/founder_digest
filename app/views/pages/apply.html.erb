<%= render partial: "shared/heading", locals: {title: 'Apply to Founder Digest' , tagline: 'Each submission is manually reviewed by our team within 24 hours.' } %>

<% plan_name = params[:plan] || 'free' %>

<div class="mx-auto max-w-sm">

<%= form_for UserSubmission.new do |form| %>

<input type="hidden" id="user_submission_plan_name" name="user_submission[plan_name]" value="<%= plan_name %>" >

    <div class="space-y-12">
      <div class="border-b border-gray-900/10 pb-12">

        <div class="mt-10 grid grid-cols-1 gap-x-6 gap-y-8 sm:grid-cols-6">
          <div class="sm:col-span-3">
            <label for="first_name" class="block text-sm font-medium leading-6 text-gray-900">First name</label>
            <div class="mt-2">
                <%= form.text_field :first_name, required: true, placeholder: 'Name', class: 'block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6' %>
            </div>
          </div>

          <div class="sm:col-span-3">
            <label for="last_name" class="block text-sm font-medium leading-6 text-gray-900">Last name</label>
            <div class="mt-2">
              <%= form.text_field :last_name, required: true, placeholder: 'Last name', class: 'block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6' %>

            </div>
          </div>

          <div class="sm:col-span-6">
            <label for="email" class="block text-sm font-medium leading-6 text-gray-900">Email address</label>
            <div class="mt-2">
              <%= form.text_field :email, required: true, type: 'email', placeholder: 'my@email.com', class: 'block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6' %>

            </div>
          </div>

          <div class="sm:col-span-6">
            <label for="website" class="block text-sm font-medium leading-6 text-gray-900">Company Website</label>
            <div class="mt-2">
              <%= form.text_field :website, required: true, type: 'url', placeholder: 'https://softwarecomoservicio.com', class: 'block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6' %>

</div>
          </div>

        </div>
      </div>

      <div class="border-b border-gray-900/10 pb-12">

        <div class="mt-10 space-y-10">

          <fieldset>
            <legend class="text-sm font-semibold leading-6 text-gray-900">Whats Your Role?</legend>
            <div class="mt-6 space-y-6">
              <div class="flex items-center gap-x-3">
                <input id="user_submission_job_role_csuite" name="user_submission[job_role]" type="radio" value="c-suite" class="h-4 w-4 border-gray-300 text-indigo-600 focus:ring-indigo-600">
                <label for="user_submission_job_role_csuite" class="block text-sm font-medium leading-6 text-gray-900">C-Suite</label>
              </div>
              <div class="flex items-center gap-x-3">
                <input id="user_submission_job_role_founder" name="user_submission[job_role]" type="radio" value="founder" class="h-4 w-4 border-gray-300 text-indigo-600 focus:ring-indigo-600">
                <label for="ser_submission_job_role_founder" class="block text-sm font-medium leading-6 text-gray-900">Founder</label>
              </div>
              <div class="flex items-center gap-x-3">
                <input id="user_submission_job_role_employee" name="user_submission[job_role]" type="radio" value="employee" class="h-4 w-4 border-gray-300 text-indigo-600 focus:ring-indigo-600">
                <label for="user_submission_job_role_employee" class="block text-sm font-medium leading-6 text-gray-900">Employee</label>
              </div>
            </div>
          </fieldset>

          <div class="col-span-full">
                        <label for="text" class="block text-sm font-medium leading-6 text-gray-900">About</label>
                        <div class="mt-2">

<%= form.text_area :text, required: true, placeholder: 'Stakeholders, &#10;this month we worked on Growth...'.html_safe, rows: 6, class: 'block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6' %>


                        </div>
                        <p class="mt-2 text-sm text-gray-500">The more detailed, the more likely you'll be accepted.</p>
          </div>


        </div>
      </div>
    </div>



    <div class="mt-6 flex items-center justify-end gap-x-6">

      <button type="submit" class="w-full rounded-md bg-brand-orange px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-brand-orange-dark focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">Apply</button>
    </div>

<% end %>

</div>
