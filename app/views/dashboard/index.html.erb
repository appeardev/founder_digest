<%= render partial: "shared/heading", locals: {title: 'Dashboard' , tagline: 'Browse newsletters and upload your own.' } %>

<!-- main box area -->
<div class="border border-black mb-20 border-2 p-5 max-w-3xl mx-auto">
  <div class="flex">

<div class="basis-1/2">


<div class="flex gap-x-2">

  <div class="basis-1/6">

<img src="https://via.placeholder.com/150" alt="">


  </div>

  <div class="basis-5/6">
    <p class="text-lg">{{ Title }}</p>
    <p class="text-sm">{{ Description }}</p>
    </div>


</div>




</div>


<div class="basis-1/2 text-right">

<p>{{ Num }} Subscribers</p>
<p><a href="/stakeholder_updates/new" class="text-brand-orange underline">Share update</a></p>
<p><a href="" class="text-brand-blue underline">Edit subscription</a></p>
</div>

  </div>
</div>




<!-- Newsletters  -->



<div class="p-5 max-w-5xl mx-auto space-y-2">
  <% 5.times do %>
  <div class="flex">

<div class="basis-1/2">


<div class="flex gap-x-2">

  <div class="basis-1/6">

<img src="https://via.placeholder.com/150" alt="">


  </div>

  <div class="basis-5/6">
    <p class="text-lg">{{ Title }}</p>
    <p class="text-sm">{{ Description }} {{ (URL) }}</p>
    </div>


</div>




</div>


<div class="basis-1/2 text-right">
               <input id="subscribed" aria-describedby="subscribed-description" name="subscribed" type="checkbox" class="rounded m-1 border-gray-300 text-indigo-600 focus:ring-indigo-600">
               <label for="subscribed" class="font-medium text-gray-900">{{ Subscribed Status }}</label>
     </div>
</div>
  <% end %>
  </div>
